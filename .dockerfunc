#!/bin/bash

deno(){
  docker run \
    --interactive \
    --tty \
    --rm \
    --volume $PWD:/app \
    --volume $HOME/.deno:/deno-dir \
    --workdir /app \
    hayd/alpine-deno:1.4.0 \
    "$@"
}

go() {
  docker run \
    --interactive \
    --tty \
    --rm \
    --volume $PWD:/go \
    --env GOPATH= \
    golang:latest \
    go "$@"
}

aws() {
  docker run -it --rm \
    -v "${HOME}/.aws:/root/.aws" \
    --volume $PWD:/aws \
    --log-driver none \
    --name aws \
    amazon/aws-cli "$@"
}

dphp() {
  docker run -it --rm \
    --volume $PWD:/usr/src/myapp \
    -w /usr/src/myapp \
    --name php \
    php:7.4-cli -f "$@"
}


yq() {
  docker run --rm -i \
    -v ${PWD}:/workdir \
    mikefarah/yq yq $@
}